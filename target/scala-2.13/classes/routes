# User
GET     /users                             controllers.UserController.index
POST    /users                            controllers.UserController.store
GET     /users/:user_id                    controllers.UserController.show(user_id: Int)
PUT     /users                   controllers.UserController.update
DELETE  /                                 controllers.UserController.delete(user_id: Option[Int])

# Lift
GET     /lift_type                       controllers.LiftTypeController.index
POST    /lift_type                       controllers.LiftTypeController.store
GET     /lift_type/:lift_type_id         controllers.LiftTypeController.show(lift_type_id: Int)
PATCH    /lift_type/:lift_type_id         controllers.LiftTypeController.update(lift_type_id: Int)
#DELETE  /lift_type/:lift_type_id         controllers.LiftTypeController.destroy(lift_type_id: Int)

